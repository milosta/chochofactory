<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.milos.chocolatefactory.fragments.TappingFragment">

    <ImageButton
        android:id="@+id/chocolateButton"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/chocolateButtonDesc"
        android:scaleType="centerInside"
        android:src="@drawable/tap_chocolate_bar" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/tapping_help"
        android:textSize="15sp" />
</RelativeLayout>